var name = ''
var list = []
// function add(event) {
    
// }
var inp = document.getElementById('inp')
// inp.addEventListener('change', save)
var btn = document.getElementById('btn')
btn.addEventListener('click', save)
var hero = document.getElementById('mainDiv')
function save(event) {
    name = inp.value
    list.push(name)
    hero.innerHTML =''
    for (let i = 0; i < list.length; i++) {
        hero.innerHTML += `<div style="border: 1px solid black"> <p>${list[i]}</p> <button id="${i}">Done</button> <button>Delete</button> <button>Edit</button></div>`
        // var done = document.getElementById(`'${i}'`)
        // done.addEventListener('click', colorChange)

    }
}
function colorChange(event) {
        event.target.style.backgroundColor='green'
}
